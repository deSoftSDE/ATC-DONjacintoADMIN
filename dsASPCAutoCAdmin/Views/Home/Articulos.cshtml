@{
    ViewData["Title"] = "Artículos";
}


<div class="container " ng-controller="Articulos">
    <div class="row">
        <div class="col-12 p-5">
            <h2>@ViewData["Title"]</h2>
            <h3>@ViewData["Message"]</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @*<p>Use this area to provide additional information.</p>*@
            <div class="row mb-4">
                <div class="col-6">
                    <div class="dataTables_wrapper">
                        <div class="dataTables_paginate" style="float:left">
                            <ul class="pagination">
                                <li class="page-item" id="primera" ng-click="cambiarPagina(this, 'F')">
                                    <a class="page-link"><i class="fa fa-step-backward "></i> Primera</a>
                                </li>
                                <li class="page-item" id="anterior" ng-click="cambiarPagina(this, 'P')">
                                    <a class="page-link"><i class="fa fa-caret-left "></i> anterior</a>
                                </li>
                                <li class="page-item" id="siguiente" ng-click="cambiarPagina(this, 'N')">
                                    <a class="page-link"> siguiente <i class="fa fa-caret-right "></i></a>
                                </li>
                                <li class="page-item" id="ultima" ng-click="cambiarPagina(this, 'L')">
                                    <a class="page-link">Última <i class="fa fa-step-forward "></i> </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-6 text-right">
                    @*<input type="submit" value="Añadir Nuevo Tipo" ng-click="crearRegistro()" />*@
                    <!--<button  type="submit" value="Añadir Nuevo Tipo" ng-click="crearRegistro()" class="btn btn-primary"><i class="fas fa-plus-square"></i> Añadir nuevo Tipo</button>-->
                </div>
            </div>
                <div class="dx-viewport demo-container">
                    <div id="gridContainer" dx-data-grid="dataGridOptions" dx-item-alias="art" style="width:100% !important;">
                        <div data-options="dxTemplate:{ name:'cellTemplate' }">
                            <img class="img-fluid" ng-src="{{art.value}}" />

                        </div>
                        <div data-options="dxTemplate:{ name:'editTemplate' }">

                            @*<input type="submit" ng-click="modificarVidrio(vidrio)" />*@
                            <button type="submit" ng-click="modificarArticulo(art)" class="btn btn-default btn-sm"><i class="fas fa-pen-square"></i> Editar</button>

                        </div>
                        <div data-options="dxTemplate:{ name:'deleteTemplate' }">

                            @*<input type="submit" ng-click="modificarVidrio(vidrio)" />*@
                            <button type="submit" ng-click="eliminarRegistro(art)" class="btn btn-default btn-sm"><i class="fas fa-pen-square"></i> Eliminar</button>

                        </div>

                    </div>
                </div>
           
        </div>
    </div>
   @*POPUP EDITAR/CREAR CARROCERIAS*@
    <div dx-popup="popupOptions">
        <div class='popup-property-details'>
            <div class="form">
                <div class="form-group">
                    <label>Descripción </label>
                    <div class="col-12">
                        <input type="text" ng-model="currentarticulo.descripcion" class="form-control form-control-sm" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Selecciona la marca</label>
                    {{lastMarca.descripcionSeccion}}
                    <div style="z-index:99999999" dx-select-box="selectBox" dx-item-alias="product">

                        <div data-options="dxTemplate: { name: 'field' }">
                            <!--<div class="custom-item">
                <img ng-src="{{product.ImageSrc}}" />
                <div class="product-name" dx-text-box=" {value: product.Name, readOnly: true }">
                </div>
            </div>-->
                            <div dx-text-box="settingsbox"></div>
                        </div>
                        <div data-options="dxTemplate: { name: 'item' }">
                            <div class="custom-item">
                                <div class="row">
                                    <div class="col-md-3"><img ng-src="{{product.url}}" style="width:50px" onerror="this.src='../images/imagen_defect.png'" /></div>
                                    <div class="col-md-3">
                                        <div class="product-name">
                                            {{product.descripcionSeccion}}
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                    <label>Selecciona el Modelo</label>
                    {{lastModelo.descripcionFamilia}}
                    <div style="z-index:99999999" dx-select-box="selectBox2" dx-item-alias="product">
                        <div data-options="dxTemplate: { name: 'field' }">
                            <div class="custom-item">
                                <img ng-src="{{product.ImageSrc}}" />
                                {{product.descripcionFamilia}}
                            </div>
                        </div>
                        <div data-options="dxTemplate: { name: 'item' }">
                            <div class="custom-item">
                                <div class="row">
                                    <div class="col-md-3"><img ng-src="{{product.url}}" style="width:50px" onerror="this.src='../images/imagen_defect.png'" /></div>
                                    <div class="col-md-3">
                                        <div class="product-name">
                                            {{product.descripcionFamilia}}
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>

                    <label>Selecciona el Tipo de Vehículo</label>
                    {{lastVehiculo.descripcion}}
                    <div style="z-index:99999999" dx-select-box="selectBox3" dx-item-alias="product">
                        <div data-options="dxTemplate: { name: 'field' }">
                            <div class="custom-item">
                                <img ng-src="{{product.ImageSrc}}" />
                                {{product.descripcion}}
                            </div>
                        </div>
                        <div data-options="dxTemplate: { name: 'item' }">
                            <div class="custom-item">
                                <div class="row">
                                    <div class="col-md-3"><img ng-src="{{product.url}}" style="width:50px" onerror="this.src='../images/imagen_defect.png'" /></div>
                                    <div class="col-md-3">
                                        <div class="product-name">
                                            {{product.descripcion}}
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            {{textBoxValue}}
        </div>
    </div>
</div>


